<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rltpreferencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_branco"
        >

        <TextView
            android:layout_toEndOf="@+id/left"
            android:id="@+id/txvpergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exemplo?"
            android:layout_toStartOf="@+id/right"
            android:textAlignment="center"
            android:textSize="26sp" />


        <ImageView
            android:id="@+id/left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/rigth_arrow" />

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/lnrprefcriterio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvpergunta"
            android:layout_marginTop="50dp"

            android:orientation="horizontal">


            <Button
                android:id="@+id/criterio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CRITÉRIO 1"
                android:background="@drawable/shape_button"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/branco"
                android:layout_marginEnd="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/criterio2"
                android:background="@drawable/shape_button_cinza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="CRITÉRIO 2"
                android:textColor="@color/cinzaescuro"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrprefcriterio"
            android:layout_marginTop="26dp"
            android:max="9"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:thumb="@drawable/one"
            android:progress="0" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnfinalizar"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:src="@drawable/checked" />

</RelativeLayout>