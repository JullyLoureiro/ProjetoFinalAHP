<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.juliana.loureiro.projetofinalahp.Activity.OneFragment">

    <RelativeLayout

        android:padding="10dp"
        android:id="@+id/rltalternativa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/help"
            android:layout_alignParentEnd="true"
            android:src="@drawable/help"
            android:layout_width="32dp"
            android:layout_height="32dp" />


        <TextView
            android:id="@+id/alternativatitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALTERNATIVAS"
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnralternativa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alternativatitulo"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtalternativa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:background="@drawable/shape_edittext"
                android:layout_weight="1"
                android:hint="Alternativa" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnaddalternativa"
                android:layout_width="match_parent"
                app:fabSize="mini"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:src="@drawable/add" />

        </LinearLayout>

        <ListView
            android:id="@+id/listAlternativas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnralternativa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>


</RelativeLayout>